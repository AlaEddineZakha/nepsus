{% extends 'dashboard/dashboard1.html.twig' %}
{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset('Template/assets/global/plugins/datatables/datatables.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('Template/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('Template/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block container%}
    <script type="application/javascript">
        function myFunction($id) {



            var url = Routing.generate('deletetax',{'id':$id});

            swal({
                    title: "Vous etes sure?",
                    text: "Ce taxe sera supprimé définitevement",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-danger",
                    confirmButtonText: "Oui, supprimer le!",
                    cancelButtonText: "Non, anuuler!",
                    closeOnConfirm: false,
                    closeOnCancel: false,
                    showOkButton:false

                },
                function (isConfirm) {
                    if (isConfirm) {
                        swal("Deleted!", "Le taxe a été supprimé.", "success");
                        location.href=url;
                    } else {
                        swal("Cancelled", "Le taxe n'a pas été supprimé :)", "error");
                    }
                });

        }
    </script>

    <!-- END THEME PANEL -->
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="index.html">Accueil</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="#">Taxes</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Liste des taxes</span>
            </li>
        </ul>

    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title"> Listes des taxes

    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="m-heading-1 border-green m-bordered">
        <h3>Listes des taxes</h3>

    </div>
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">

                    </div>
                    <div class="tools"> </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover" id="sample_1">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Valeur</th>
                            <th>Etat</th>
                            <th>Date d'ajout</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Valeur</th>
                            <th>Etat</th>
                            <th>Date d'ajout</th>
                            <th>Actions</th>
                        </tr>
                        </tfoot>
                        <tbody>

                        {% for taxe in taxes %}
                            <tr>
                                <td>#{{ taxe.id }}</td>
                                <td>{{ taxe.montant }}</td>
                                {% if taxe.active ==1 %}
                                    <td> <span class="label label-sm label-success">Activé </span></td>
                                {% elseif taxe.active ==0 %}

                                    <td> <span class="label label-sm label-danger">Desactivé </span></td>
                                {% endif %}
                                <td>{{ taxe.created|date('Y-m-d') }}</td>

                                <td>
                                    <a href="{{ path('edittaxe', {'id': taxe.id }) }}" class="btn btn-icon-only yellow" ><i class="fa fa-edit"></i> </a>
                                    <a href="javascript:;" class="btn btn-icon-only red" onclick="myFunction({{ taxe.id }})"><i class="fa fa-times"></i> </a>

                                </td>

                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>



{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('Template/assets/global/scripts/datatable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Template/assets/global/plugins/datatables/datatables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Template/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Template/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="{{ asset('Template/assets/pages/scripts/table-datatables-buttons.min.js') }}" type="text/javascript"></script>


{% endblock %}
